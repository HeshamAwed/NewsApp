<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/articlesFragment">

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.hesham.newsapp.ui.articles.ArticlesFragment"
        android:label="ArticlesFragment"
        tools:layout="@layout/articles_fragment">
        <action
            android:id="@+id/action_articlesFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.hesham.newsapp.ui.article_details.ArticleDetailsFragment"
        android:label="article_details_fragment"
        tools:layout="@layout/article_details_fragment"
        />

</navigation>